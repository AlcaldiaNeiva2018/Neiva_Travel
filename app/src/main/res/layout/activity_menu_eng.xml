<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMenuEng">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/menu_imagen" />

    <ImageButton
        android:id="@+id/btnQueHacer_eng"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="299dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/menu_enguno" />
    <ImageButton
        android:id="@+id/btnGastronomia_eng"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="299dp"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/menu_engdos" />
    <ImageButton
        android:id="@+id/btnCalendario_eng"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="299dp"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/menu_engtres" />
    <ImageButton
        android:id="@+id/btnGaleria_eng"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="299dp"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/menu_engcuatro" />
    <ImageButton
        android:id="@+id/btnNuestraCultura_eng"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="299dp"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/menu_engcinco" />
    <ImageButton
        android:id="@+id/btnNuestraGuia_eng"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="299dp"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/menu_engseis" />
    <ImageButton
        android:id="@+id/btnMiMunicipio_eng"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="299dp"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/menu_engsiete" />

    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>