<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMenuEsp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_fondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:srcCompat="@drawable/menu_imagen" />

            <ImageButton
                android:id="@+id/btnQueHacer"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="299dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/menu_espuno" />
            <ImageButton
                android:id="@+id/btnGastronomia"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="299dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/menu_espdos" />
            <ImageButton
                android:id="@+id/btnCalendario"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="299dp"
                android:layout_height="68dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/menu_esptres" />
            <ImageButton
                android:id="@+id/btnGaleria"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="299dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/menu_espcuatro" />
            <ImageButton
                android:id="@+id/btnNuestraCultura"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="299dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/menu_espcinco" />
            <ImageButton
                android:id="@+id/btnNuestraGuia"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="299dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/menu_espseis" />
            <ImageButton
                android:id="@+id/btnMiMunicipio"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="299dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/menu_espsiete" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>